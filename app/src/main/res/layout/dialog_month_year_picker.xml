<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Dialog Heading -->
    <TextView
        android:id="@+id/dialog_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Month and Year"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutDay"
        android:orientation="vertical">

    <!-- Title for Month Spinner -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Day"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="8dp" />

    <!-- Month Spinner with rounded border -->
    <Spinner
        android:id="@+id/spinner_Day"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/spinner_background" />

    </LinearLayout>

    <!-- Title for Month Spinner -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Month"
        android:textSize="16sp"
        android:layout_marginTop="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="8dp" />

    <!-- Month Spinner with rounded border -->
    <Spinner
        android:id="@+id/spinner_month"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/spinner_background" />


    <!-- Gap between spinners -->


    <!-- Title for Year Spinner -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Year"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Year Spinner with rounded border -->
    <Spinner
        android:id="@+id/spinner_year"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/spinner_background" />

    <!-- Select Button -->
    <Button
        android:id="@+id/button_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select"
        android:layout_marginTop="16dp" />
</LinearLayout>
